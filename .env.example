# MCP-Swarm Configuration
# Copy this file to .env and adjust values as needed

# ==========================================
# MCP Registry Configuration
# ==========================================
# URL of the MCP Registry for agent discovery
MCP_REGISTRY_URL=https://registry.mcp.dev

# Optional API key for MCP Registry authentication
# MCP_REGISTRY_API_KEY=your-api-key-here

# ==========================================
# Agent Configuration
# ==========================================
# Unique identifier for this agent
AGENT_NAME=default-agent

# Role/capability of the agent (e.g., processor, coordinator, analyst)
AGENT_ROLE=general

# Port on which the agent's MCP server will listen
AGENT_PORT=8000

# ==========================================
# Logging Configuration
# ==========================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log format: "json" for production (machine-parseable), "pretty" for development (human-readable)
LOG_FORMAT=pretty

# Service name to include in all log entries
SERVICE_NAME=mcp-swarm

# ==========================================
# Monitoring & Observability
# ==========================================
# Enable Prometheus metrics collection
ENABLE_METRICS=true

# Port for Prometheus metrics endpoint
METRICS_PORT=9090

# ==========================================
# State Management
# ==========================================
# State backend: "memory" (ephemeral) or "persistent" (disk-based)
STATE_BACKEND=memory

# Path for persistent state storage (only used if STATE_BACKEND=persistent)
STATE_PERSISTENCE_PATH=./state

# ==========================================
# Security Configuration
# ==========================================
# Enable TLS for agent communication
TLS_ENABLED=false

# Path to TLS certificate (required if TLS_ENABLED=true)
# TLS_CERT_PATH=/path/to/cert.pem

# Path to TLS private key (required if TLS_ENABLED=true)
# TLS_KEY_PATH=/path/to/key.pem
